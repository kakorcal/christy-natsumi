  pointer-events: none;
  opacity: 0;
  transition: opacity 350ms cubic-bezier(0.770, 0.000, 0.175, 1.000);
}

.modal__close {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255,0,0,0.2);
