@mixin dolceVita { //should only be applied to element that needs the font, otherwise children will inherit letter-spacing
  font-family: 'dolce vita', 'Helvetica Neue', Helvetica, Arial, sans-serif !important;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  letter-spacing: 0.1rem !important;
  text-rendering: optimizeLegibility;
}

h1, h2, h3, h4, .dolceVita {
  @include dolceVita;
}

.cn-number {
  color: #666;
  font-weight: lighter;
  letter-spacing: 0.05rem;
  text-rendering: optimizeLegibility;
}

.cn-imageFrame {
  -webkit-box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.2);
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.2);
  padding: 10px;

  background: #f8f8f8; /* Old browsers */
  background: -moz-linear-gradient(top, rgba(255,255,255,1) 0%, rgba(248,248,248,1) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,1)), color-stop(100%,rgba(248,248,248,1))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(248,248,248,1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(248,248,248,1) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(248,248,248,1) 100%); /* IE10+ */
  background: linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(248,248,248,1) 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f8f8f8',GradientType=0 ); /* IE6-9 */
}


.cn-wrapper {
  max-width: 1240px;
  padding: 0 1rem;
  margin: 0 auto;
  position: relative;
  font-size: 0;

  @media (min-width: $screen-tablet) {
    padding: 0 2rem;
  }
  @media (min-width: $screen-desktop-1) {
    padding: 0 4rem;
  }
}



.cn-wrapper--top {
  margin-top: 4rem;

  @media (min-width: $screen-tablet) {
    margin-top: 8rem;
  }
  @media (min-width: $screen-desktop-1) {
    margin-top: 12rem;
  }
}


img.full {
  width: 100%;
}


@mixin fx-allFast {
  -webkit-transition: all 200ms ease;
  -moz-transition: all 200ms ease;
  -ms-transition: all 200ms ease;
  -o-transition: all 200ms ease;
  transition: all 200ms ease;
}

//hide default squarespace shopping cart button site-wide
.sqs-pill-shopping-cart-content {
  display: none;
}


//this creates offset for anchor tags so they dont hide under mini menu
.cn-anchor {
  display: block;
  position: relative;
  top: -100px;
  visibility: hidden;
}


@mixin cn-vignette {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-shadow: inset 0 0 4vw 4vw #eeeeee;

  @media screen and (min-width: $screen-tablet) {
    box-shadow: inset 0 0 1.5vw 1.5vw #eeeeee;
  }
}


.cn-note {
  font-style: italic;
  font-weight: bold;
  font-size: 1rem;

  @media screen and (min-width: $screen-tablet) {
    font-size: 1.2rem;
    line-height: 2.4rem;
  }

  @media screen and (min-width: $screen-desktop-1) {
   font-size: 1.4rem;
  }
}


.cn-heroimage {
  border-bottom: 2px solid #000;
  width: 100%;
  padding-bottom: 66.6%;
  background-size: 100%;
  margin-bottom: 7rem;

  @media (min-width: $screen-tablet) {
    padding-bottom: 48%;
  }
}
.cn-header--notHome {
  height: 160px;
  position: relative;
  border-bottom: 2px solid #000;
  background-color: #fff;
  text-align: center; //so logo is centered on mobile

  @media (min-width: $screen-tablet) {
    height: 200px;
  }

  @media (min-width: $screen-desktop-1) {
    height: 280px;
    text-align: left;
  }
}

.cn-header--mobileFixedHeader {
  //give the header some room on top for the page's dropdown nav menu
  padding-top: 60px;
  height: 200px;

  @media (min-width: $screen-tablet) {
    height: 260px;
  }

  //same as base class above - mobileFixedHeader is hidden on web
  @media (min-width: $screen-desktop-1) {
    padding-top: 0;
    height: 280px;
    text-align: left;
  }
}


.cn-header__title {
  width: 60%;
  height: 100%;
  display: inline-block;
  max-width: 22rem;
  background-size: 100%;
  background-position: center;
  background-image: url({{ 'christynatsumi-logo.png' | asset_url }});
  background-repeat: no-repeat;

  @media (min-width: $screen-tablet) {
    width: 35%;
    max-width: 30rem;
  }

  @media (min-width: $screen-desktop-1) {
    max-width: 40rem;
    margin-left: $header-spacing-left;
    width: 26%;
  }
}

.cn-header__coverImage {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.cn-header__title--mini {
  position: absolute;
  z-index: 1;
  left: $header-spacing-left;
  height: 100%;
  width: 200px;
  background-image: url({{ 'christynatsumi-logo--mini-header.png' | asset_url }});
  background-size: 100%;
  background-repeat: no-repeat;
}

.cn-header__nav {
  display: none;
  margin: 0;

  @media (min-width: $screen-desktop) {
    right: $nav-spacing-right;
    text-align: right;
    display: block;
    font-size: 0;
    top: 0;
    position: absolute;
    white-space: nowrap;
    transform: translateY(0);

    li {
      display: inline-block;
      padding: 13rem 1rem 0.5rem 1rem;
      list-style: none;
      position: relative;
      font-size: 2.4rem;

      a {
        color: #444;
        text-decoration: none;

        &:hover { border-bottom: 1px solid #444; }
      }

      &.active {
        background: #000 url({{ 'marker_bg.jpg' | asset_url }}) bottom;

        a {
          color: #fff;

          &:hover { border-bottom: 1px solid #fff; }
        }
      }
    }
  }
}




.cn-header__nav--mini {
  display: none;
  margin: 0;

  @media (min-width: $screen-desktop) {
    display: block;
    position: static;
    padding-right: $nav-spacing-right;
    border-bottom: 2px solid #fff;

    li {
      line-height: 46px;
      padding: 0 1rem;
    }
  }
}

.cn-header__nav--mini--black {
  border-bottom: 2px solid #000;
}




.cn-header--mini {
  position: fixed;
  background-color: #fff;
  top: 0;
  width: 100%;
  z-index: 999999;

  -webkit-transform: translate3d(0,-100%,0);
  -moz-transform: translate3d(0,-100%,0);
  -ms-transform: translate3d(0,-100%,0);
  transform: translate3d(0,-100%,0);

  -webkit-transition: all 400ms cubic-bezier(0.860, 0.000, 0.070, 1.000);
  -moz-transition: all 400ms cubic-bezier(0.860, 0.000, 0.070, 1.000);
  -o-transition: all 400ms cubic-bezier(0.860, 0.000, 0.070, 1.000);
  transition: all 400ms cubic-bezier(0.860, 0.000, 0.070, 1.000); /* easeInOutQuint */

  &.show {
    -webkit-transform: translate3d(0,0,0);
    -moz-transform: translate3d(0,0,0);
    -ms-transform: translate3d(0,0,0);
    transform: translate3d(0,0,0);
  }

  .cn-header__sectnav {
    margin-top: 0;
  }
}



.cn-headerNotice {
  @include dolceVita;
  text-align: center;
  background-color: #000;
  color: #fff;
  margin-top: 6rem;
  padding: 1.4rem 0;

  span {
    color: $color-highlight;
  }
}

.cn-headerNotice__wrapper {
  font-size: 1.6rem;
  line-height: 2.4rem;
  font-weight: bold;
}
.cn-header__sectnav {
  display: none;

  @media (min-width: $screen-desktop) {
    display: block;
    margin-top: -2px;
    width: 100%;
    text-align: right;
    padding-right: 1rem;
    font-size: 0;
    line-height: 0;
    background: #000 url({{ 'marker_bg.jpg' | asset_url }}) bottom;

    ul {
      text-align: right;
      line-height: normal;
      letter-spacing: 0;
    }

    li {
      display: inline-block;
      position: relative;
      border-left: 1px solid #fff;
      text-align: left;

      @include dolceVita;
      font-weight: bold;

      &:first-child {
        border-left: none;
      }
      &:hover .cn-header__sectnav__subnav-list {
        display: block;
      }
    }

    a {
      display: block;
      padding: 0 10px;
      line-height: 30px;
      color: #fff;
      font-size: 15px;
      position: relative;
      text-decoration: none;

      &:hover {
        text-decoration: underline;
      }
    }
  }
}


.cn-header__sectnav .cn-header__sectnav__subnav-title {
  padding: 0 26px 0 10px;

  &:after { //down arrow
    content: '';
    position: absolute;
    top: 50%;
    margin-top: -3px;
    right: 9px;
    border-top: 5px solid #fff;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
  }

  &:hover {
    text-decoration: none;
    cursor: default;
  }
}


.cn-header__sectnav__subnav-list {
  position: absolute;
  list-style: none;
  left: 0;
  top: 30px;
  display: none;
  min-width: 100%;
  z-index: 9999;
  border-top: 1px solid #fff;
  text-align: left;

  /* required for ie 9/10, otherwise menu collapses */
  background-color: rgba(0,0,0,0.01);
}


.cn-header__sectnav__subnav-list li {
  background-color: #000;
  border: none;
  border-bottom: 1px solid #fff;
  white-space: nowrap;
  width: 100%;

  &:last-child {
    border: none;
  }
}


/* active sectnav item styles */
.cn-header__sectnav li.active {
  background: #eee;
  border-left: 1px solid #fff;

  a {
    color: #000;
  }
  .cn-header__sectnav__subnav-list a {
    color: #fff;
  }
  &:last-child {
    border-right: 1px solid #fff;
    margin-right: -1px;
  }

  //color active dropdown arrow black
  .cn-header__sectnav__subnav-title:after {
    border-top: 5px solid #000;
  }
}


.cn-header__sectnav__cart a {
  color: $color-highlight;
}
